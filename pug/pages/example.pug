extends ../parts/main-example.pug
block title
    - var title="Шпаргалка по HTML, CSS, JS -> Главный тестовый полигон"
    - var css='./other/css/style-example.css'
    - var script='./other/js/script.js'
    - var logo='./media/index.png'
block content
    h3
        | Чтобы выйти нажми правый shift или 
        a(href='./index.html') нажми сюда
    .sandbox
        .vibor-container 
            .vibor 
                button.btn-vibor.active(type='button').html HTML  
                button.btn-vibor(type='button').css CSS
                button.btn-vibor(type='button').js JS
                button.active.btn-preview(type='button').result Result
        .editor-container
            h2 Редактор:
            #editor
                .redactor.redactor-html(style='display: flex;')
                    label(for='htmlContent') HTML:
                    textarea#htmlContent(rows='10', autocapitalize='none').
                        <div class="elements">
                            <div class="element1">element1</div>
                            <div class="element1">element2</div>
                            <div class="element1">element3</div>
                            <div class="element1">element4</div>
                        </div>
                .redactor.redactor-css(style='display: none;')
                    label(for='cssContent') CSS:
                    textarea#cssContent(rows='10', autocapitalize='none').
                        .elements {
                        display: flex;
                        flex-wrap: wrap;
                        width: 100%;
                        height: 100%;
                        justify-content: space-around;
                        align-items: center;
                        }
                        .element1, .element2, .element3, .element4 {
                        width: 45%;
                        height: 100px;
                        border: 1px solid #333;
                        text-align: center;
                        line-height: 100px;
                        background-color: #fff;
                        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
                        margin: 10px 0;
                        }
                        .element1 {
                        
                        }
                        .element2 {
                        
                        }
                        .element3 {
                        
                        }
                        .element4 {
                        
                        }
                .redactor.redactor-js(style='display: none;')
                    label(for='script') JavaScript: 
                    textarea#script(rows='10', autocapitalize='none')
                br
        .apply-container 
            button.apply(onclick='applyAll()') Применить
        .preview-container
            h2 Результат:
            .container#htmlPreview